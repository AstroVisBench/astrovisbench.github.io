---
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
import Footer from "./footer.astro";
import Header from "./header.astro";
import Meta from "./meta.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
import '../styles/main.css';
---

<!doctype html>
<html lang="en" class="text-zinc-800">
  <head>
    <link rel="icon" type="image/svg+xml" href="/avb_favicon.svg" />
    <link href='https://fonts.googleapis.com/css?family=Roboto Serif' rel='stylesheet'>
    <Meta title={title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE} description={description ?? SITE_DESCRIPTION} />
  </head>
  <body>
    <div id="scroll-div" class="flex flex-col h-full mb-8 overflow-y-scroll antialiased">
      <Header />
      <div class="flex-auto">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
